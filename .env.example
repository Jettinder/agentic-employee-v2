# AI Provider API Keys
# At least one is required

# OpenAI (GPT-4, etc.)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4.1

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Perplexity (Search-optimized)
PERPLEXITY_API_KEY=pplx-...
PERPLEXITY_MODEL=sonar-pro

# Gemini
GEMINI_API_KEY=AIza...
GEMINI_MODEL=gemini-2.5-flash

# Default provider (openai, anthropic, perplexity, gemini)
DEFAULT_AI_PROVIDER=anthropic

# ============ INTEGRATIONS ============

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Agent <agent@company.com>

# Google Calendar
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token
GOOGLE_CALENDAR_ID=primary

# Slack
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_DEFAULT_CHANNEL=#agent-notifications

# GitHub (for MCP)
GITHUB_TOKEN=ghp_your-github-token

# Brave Search (for MCP)
BRAVE_API_KEY=your-brave-api-key

# Notifications
NOTIFICATION_EMAILS=admin@company.com,team@company.com
NOTIFICATION_WEBHOOK=https://your-webhook-url/notify
